---
import "@fontsource-variable/space-grotesk";
import { SEO } from "astro-seo";
import logo from "/src/assets/favicon.ico";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="bg-colorLightGrey lg:overflow-hidden overflow-x-hidden" lang="en">
  <head>
    <SEO
      title="The Alter Ego"
      titleTemplate="%s | Alter Ego"
      description="The newsletter for the knowledge seeker"
      canonical="https://thealterego.vercel.app"
      openGraph={{
        basic: {
          url: "https://thealterego.vercel.app",
          title: "The Alter Ego",
          type: "website",
          image: logo,
        },
        optional: {
          siteName: "The Alter Ego",
          description: "The newsletter for the knowledge seeker",
          locale: "en",
        },
      }}
      titleDefault="The Alter Ego"
      ,
      extend={{
        link: [{ rel: "icon", href: logo }],
        meta: [
          {
            name: "twitter:image",
            content: logo,
          },
          {
            name: "twitter:title",
            content: "The Alter Ego",
          },
        ],
      }}
    />
  </head>
  <body class="bg-colorLightGrey">
    <slot />
    <style>
      body {
        font-family: "Space Grotesk Variable", sans-serif;
      }
    </style>
    <script>
      window.va =
        window.va ||
        function () {
          (window.vaq = window.vaq || []).push(arguments);
        };
    </script>
    <script defer src="/_vercel/insights/script.js"></script>
  </body>
</html>
