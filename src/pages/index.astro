---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
import RequirementsAccording from "@/components/ui/requirements-according";
import SignupBanner from "@/components/signup/signup-banner.astro";
import PostHistory from "@/components/signup/post-history.astro";
---

<Layout title="The Alter Ego">
  <main
    class="flex flex-col justify-center lg:space-y-20 space-y-10 w-screen lg:h-screen h-full min-h-screen p-24"
  >
    <div class="grid lg:grid-cols-2 grid-cols-1 lg:gap-80 gap-40">
      <SignupBanner />
      <PostHistory />
    </div>
    <RequirementsAccording client:load />
  </main>
</Layout>
