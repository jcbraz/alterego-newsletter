---
import { Button } from "../ui/button";
import { Check } from "lucide-react";
---

<div class="flex flex-col items-center lg:items-start justify-center lg:space-y-10 space-y-5">
  <h1 class="text-colorBlack lg:text-5xl text-2xl font-bold italic uppercase">
    THE ALTER EGO
  </h1>
  <h3
    class="text-colorBlack lg:text-xl text-sm text-center font-normal italic uppercase"
  >
    THE NEWSLETTER FOR THE KNOWLEDGE SEEKER
  </h3>
  <div class="flex flex-row lg:space-x-4 space-x-2">
    <h3 class="text-colorOrange lg:text-4xl text-xl italic uppercase">SUCCESS!</h3>
    <Check className="lg:w-10 lg:h-10 w-6 h-6 text-colorOrange" />
  </div>
  <a href="/">
    <Button
      variant="outline"
      className="bg-colorLightGrey border-2 border-colorBlack italic"
    >
      GO TO MAIN PAGE
    </Button>
  </a>
</div>
